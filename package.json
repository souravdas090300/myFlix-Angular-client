{
  "name": "my-flix-angular-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4200",
    "dev": "ng serve --proxy-config proxy.conf.json",
    "dev-app": "ng serve --port 4200",
    "proxy": "node proxy-server.js",
    "dev-with-proxy": "concurrently \"npm run proxy\" \"npm run dev-app\"",
    "build": "ng build --configuration production",
    "build-gh": "ng build --configuration production --base-href /myFlix-Angular-client/",
    "deploy": "npm run build-gh && npx angular-cli-ghpages --dir=dist/myFlix-Angular-client/browser",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:myFlix-Angular-client": "node dist/myFlix-Angular-client/server/server.mjs",
    "lint": "ng lint",
    "heroku-postbuild": "ng build --configuration production",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs -p 3001 -o"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.2.3",
    "@angular/cdk": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/material": "^20.2.1",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-browser-dynamic": "^20.2.3",
    "@angular/platform-server": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@angular/ssr": "^20.2.1",
    "axios": "^1.11.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.2.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "20.2.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "eslint": "^9.33.0",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typedoc": "^0.28.12",
    "typescript-eslint": "8.40.0"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  }
}
